/* Enhanced table styles */
.data-table {
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
  background: white;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.data-table thead th {
  background: #ff602b;
  color: white;
  padding: 1rem 0.75rem;
  text-align: left;
  font-weight: bold;
  border-bottom: 2px solid #dd3b01;
}

.data-table tbody td {
  padding: 0.75rem;
  border-bottom: 1px solid #eee;
  vertical-align: top;
}

.data-table tbody tr:hover {
  background: #f8f9fa;
}

.data-table tbody tr:nth-child(even) {
  background: #f9f9f9;
}

.data-table tbody tr:nth-child(even):hover {
